{
    "compilerOptions": {
        "module": "CommonJs",
        "target" : "ES2018",
        // "outDir": "dist", //https://www.typescriptlang.org/tsconfig#outDir
        "lib" : ["ES2015.Promise", "DOM"], // affects type-checking
        "strict": true, // mode
        "types" : ["jasmine", "node"], // frameworks we work with
        "maxNodeModuleJsDepth": 50,
        "esModuleInterop": true, //allows to use JS
        "allowJs": true, 
        "checkJs": true,
        "moduleResolution": "node"
    },

    "exclude": [ // from compiling
      "./conf/*.js", 
      "node_modules/*",
      "built",
      "testapp",
      "website",
      "scripts",
      "exampleTypescript",
      "spec/**/*"
    ]
}